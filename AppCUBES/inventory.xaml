<Window x:Class="AppCUBES.inventory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppCUBES"
        mc:Ignorable="d"
        Title="inventory" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="gridinventory" HorizontalAlignment="Left" Height="364" Margin="23,33,0,0" VerticalAlignment="Top" Width="470" d:ItemsSource="{d:SampleData ItemCount=5}" RenderTransformOrigin="0.512,0.527"/>
        <Button x:Name="Plus" Content="+" HorizontalAlignment="Left" Height="40" Margin="619,68,0,0" VerticalAlignment="Top" Width="40" FontSize="22" Click="Plus_Click"/>
        <Button x:Name="Moins" Content="-" HorizontalAlignment="Left" Height="40" Margin="619,138,0,0" VerticalAlignment="Top" Width="40" FontSize="22" Click="Moins_Click"/>

    </Grid>
</Window>
