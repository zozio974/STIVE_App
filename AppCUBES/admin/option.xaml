<Window x:Class="AppCUBES.admin.option"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppCUBES.admin"
        mc:Ignorable="d"
        Title="option" Height="450" Width="800">
    <Grid>
        <Button x:Name="changestockminadd" Content="Changer le montant commandé en automatique" HorizontalAlignment="Left" Height="65" Margin="155,59,0,0" VerticalAlignment="Top" Width="265" Click="changestockminadd_Click"/>
        <TextBox x:Name="amountchangemin" HorizontalAlignment="Left" Height="65" Margin="425,59,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="110"/>
        <Button x:Name="commandauto" Content="Activer / desactiver la commande auto" HorizontalAlignment="Left" Height="48" Margin="155,169,0,0" VerticalAlignment="Top" Width="265" Click="commandauto_Click"/>
        <ComboBox HorizontalAlignment="Left" Height="48" Margin="425,169,0,0" VerticalAlignment="Top" Width="110"/>
        <Button x:Name="retouroption" Content="Retour" HorizontalAlignment="Left" Height="45" Margin="155,324,0,0" VerticalAlignment="Top" Width="85" Click="retouroption_Click"/>

    </Grid>
</Window>
